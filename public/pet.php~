<?php

session_start();





function pet() {
   $pet = $_POST['pet']
   $user = $_SESSION['userName'] ;
   $nom_hote= "localhost" ; 
   $nom_base = getenv('DB_NAME'); 
   $nom_user = getenv('DB_USER');
   $mdp=getenv('DB_PASSWORD');
   $connection = new PDO("pgsql:host=postgres user=$nom_user dbname=$nom_base password=$mdp");
   $req = $connection->prepare("UPDATE perso SET pet=? pet_lvl=1 pet_xp=0 WHERE username =? ;") ;
   $reponse = $req->execute([$pet, $user]);
   if ($reponse) {
       header('Location: animal.php') ;
       exit() ;
   }


?>