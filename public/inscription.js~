let Ti = 1 ;
let Dr = 1 ;
let To = 1 ;
let Ph = 1 ;


function max(a, b) {
    if (a > b) {
	return a ;
    } else {
	return b ;
    }
}



function update_result_alienor() {
    alert("1") ;
    let max = max(Ph, max(To, max(Dr, Ti))) ;
    alert("2") ;
    if (max == Ph) {
	let x = 1 ;
    }
    alert("3") ;
    if (max == To) {
	let x = 2 ;
    }
    alert("4") ;
    if (max == Ti) {
	let x = 3 ;
    }
    alert("5") ;
    else {
	let x = 4 ;
    }
    alert("6") ;

    document.getElementById("result").value = x ;
}


